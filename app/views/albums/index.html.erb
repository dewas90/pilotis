<h1 class="text-center"> Photo Album <%= link_to "", new_album_path, class: "fa fa-plus-circle new-btn" %></h1>
<%= form_tag(albums_path, method: :get) do %>
  <%= text_field_tag :query, collection: Album.pluck(:created_at) %>
  <%= submit_tag 'Search' %>
<% end %>
<div class="container">
  <div class="albums">
      <% @albums.each do |album| %>
        <div class="album">
          <div class="album-body">
            <div class="album-picture" style="background-image: url('<%= cl_image_path album.photos.sample.path  %>')">
              <div class="album-hover">
                <h4><%= album.name %></h4>
                <p><%= album.created_at %></p>
              </div>
            </div>
            <div class="album-likes">
              <ul class="list-inline">
                <li><%= link_to "See the album", album_path(album) %></li>
                <li>Published by <%= album.admin.profile.first_name %></li>
                <li><%= album.created_at.year %></li>
                </ul>
              </div>
            </div>
              <div class="album-footer">
              </div>
            </div>
      <% end %>
       </div>
  </div>



