<% if current_user.profile.status == "Accepted" %>
<main id="events">
<h1 class="text-center"> Events <%= link_to "", new_event_path, class: "fa fa-plus-circle new-btn" %></h1>
  <input id="tab1" type="radio" name="tabs" checked>
  <label for="tab1">All Events</label>
  <section id="content1">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Event Name</th>
          <th>Start Date</th>
          <th>End Date</th>
        </tr>
      </thead>
      <tbody><% @events.each do |event| %>
        <tr class="clickable" data-toggle="collapse" id="<%= event.id %>" data-target=".<%= event.id %>collapsed">
          <td><%= event.name %></td>
          <td><%= event.start_time %></td>
          <td><%= event.end_time %></td>
          <td><%= link_to 'Show', event_path(event.id), class:"btn-primary" %></td>
          <td><%= link_to 'Edit', edit_event_path(event.id), class:"btn-primary" %></td>
          <td><%= link_to 'Delete', event_path(event.id), method: :delete, class:"btn-danger", data: {confirm: "Are you really sure you want to delete this event?"}  %></td>
        </tr>
      <% end %></tbody>
    </table>
  </section>
</main>

<div id="events-on-calendar">
  <%= month_calendar events: @events, previous_link: events_ajax_previous_link, next_link: events_ajax_next_link do |date, events| %>
     <%= date.day %>
   <% events.each do |event| %>
      <div>
        <%= event.name %>
        <%= event.description %>
    </div>
    <% end %>
  <% end %>
</div>
<% else %>
<%= render "shared/pending" %>
<% end %>
