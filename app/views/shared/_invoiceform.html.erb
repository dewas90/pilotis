<div class="container">
    <div class="forms">
      <% if @invoice.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% @invoice.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

  <%= simple_form_for [@invoice] do |f| %>
  <%= f.input :title %>
  <%= f.input :date %>
  <%= f.input :amount %>
  <%= f.input :bank_account %>
  <%= f.input :due_date %>
  <%= f.submit "Generate invoice", class: "btn"%>
<% end %>
</div>
</div>
</div>
